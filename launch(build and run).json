{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and run",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build C program",
            "windows": {
                "command": "${fileDirname}\\${fileBasenameNoExtension}.exe"
            },
            "runOptions": {
                "runInBackground": false
            }
        }
    ]
}
